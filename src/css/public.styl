page {
  height: 100%;
  overflow: hidden;
  font-size: 28rpx;
}
view{
  box-sizing: border-box;
}
.item_box {
  width: 100%;
  height: auto;

  .item_title {
    font-size: 14px;
    color: #333333;
    font-weight: 500;
    padding: 20px 0 0px;
    display: flex;

    &.active {
      &:after {
        content: '*';
        font-size: 14px;
        color: #F33C2E;
        font-weight: 500;
        padding-left: 5px;
      }
    }
  }

  .input_box {
    width: 100%;
    height: 40px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

    &:after {
      content: '>';
      font-size: 18px;
      color: #999999;
    }
  }

  .item_input {
    width: 100%;
    height: 100%;
  }

  .input_placeholder {
    width: 100%;
    height: 100%;
    color: #D6D6D6;
    font-size: 18px;
  }
}

.code_box{
  position: absolute;
  right: 70px;
  bottom: 140px;
  height: 300px;
  z-index: 1000; 
}
.code_img{
  width: 70px;
  height: 70px;
}

.scroll-list::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;/* Chrome Safari */
  display: none;
}
.container {
  height: 100%;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
}

wh(w,h=w){
  width: w;
  height: h; 
}
