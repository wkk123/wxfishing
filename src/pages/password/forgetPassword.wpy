<style lang="stylus">
.login_box{
  width: 100%;
  height: auto;
  padding: 60px 35px;
  .login_info{
    width: 100%;
    height: auto;
    display:flex;
    flex-direction:row;
    justify-content: flex-start;
    .head_text{
      font-size:24px;
