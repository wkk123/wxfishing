        font-size: 16px;
        color: #333333;
        font-weight: 500; 
      }
      .input{
        font-size: 16px;
        color: #999999;
        font-weight: 500; 
        text-align: center;
      }
      &.code{
        width: 100%;
        height: 50px;
        display: flex;
        flex-grow: 1; 
        flex-direction: row;
        justify-content: flex-start;
        border-radius: 4px;
        background-color: #F9F9F9; 
        overflow: hidden;
        .content_input{
          width: calc(50% - 20px);
          height: 100%;
          padding:0 0 0 20px;
          &:after{
            content:'|';
            color: #979797;
            line-height: 50px; 
          }
        }
        .content_code{
          width: 50%;
          height: 100%;
          line-height: 50px;
          text-align: center;
