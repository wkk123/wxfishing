      <!-- content -->
      <div class="member_content">
        <!-- info -->
        <div class="member_info_content">
          <image class="content_image" src="{{orderDetail.shop.logo}}" mode="widthFix" lazy-load="false" />
          <ul class="content_text">
            <li class="text_name">
              <text class="name">{{orderDetail.shop.contactName}}</text>
              <div></div>
            </li>
            <li class="text_item">{{orderDetail.shop.mobilePhone}}</li>
            <!-- <li class="text_item">老顾客，可适当送些礼品</li> -->
          </ul>
          <div
            class="content_btn"
            @click="gotoMore()"
          >查看更多</div>
        </div>
        <!-- orderList -->
        <div class="member_list">
          <OrderList
            :info="orderDetail"
          />
        </div>
        <!-- btn -->
        <div class="member_btn">
          <button
            class="form_btn"
            @click="repealBtn()"
          >撤销订单</button>
