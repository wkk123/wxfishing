<script>
  import wepy from '@wepy/core';
  import { orderRevoke } from './../../request/api.js';
  import { mapState } from '@wepy/redux';
  import { COMMIT } from './../../store/types';
  import store from './../../store';
  wepy.page({
    store,
    options: {
      addGlobalClass: true
    },
    data: {
      orderId: 13,//订单id
      orderDetail: {},//订单详情
    },
    computed: {
      ...mapState([ 'publics' ])
    },
    methods: {
      // 看看更多
      gotoMore(){
        wx.navigateTo({
          url: '/pages/shopInfo/index'
        })
      },
      // 后退
      gotoBack(){
        wx.navigateBack({
          delta: 1
        })
      },
      // 撤销订单
      repealBtn() {
        orderRevoke({id: this.orderId}).then(res => {
          const {code, data, message} = res;
          if(res.code === 10000){
            console.log('res',res)
          }
        }).catch(err=> {
          const { message } = err;
          if( message ){
            wx.showToast({
              title: message,
              icon: 'error',
              duration: 2000
            })  
          }
        })
      },
    },
    onLoad(options){
      const { id } = options;
      this.orderId = id;
      const { orderDetail } = this.publics;
      this.orderDetail = orderDetail;
    },
    onShow(){
      // wx.navigateTo({
      //   url: '/pages/login'
      // })
    },
    onReady(){

    },
    onUnload(){

    },
  });
</script>
