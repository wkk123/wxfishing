    methods: {
      // 获取二维码
      getCode(){
        orderQRCode(this.codeData).then(res => {
          const {code, data, message} = res;
          if(res.code===10000){
            console.log('res',res)
          }
        }).catch(err=> {
          console.log(err)
        })
      },
      // 获取支付结果
      getResults() {
        orderWechatPaymentStatus({outTradeNo: this.outTradeNo}).then(res => {
          const {code, data, message} = res;
          if(res.code===10000){
            console.log('res',res)
          }
        }).catch(err=> {
          console.log(err)
          this.goToOrderInfo();
        })
      },
      // 线下支付
      offlinePayment(){
        orderOfflinePay(this.payment).then(res => {
          const {code, data, message} = res;
          if(res.code===10000){
            console.log('res',res)
          }
        }).catch(err=> {
          console.log(err)
        })
      },
      // 进入订单详情
      goToOrderInfo(){
        wx.navigateTo({
          url: '/pages/cashierManagement/cashierOrder'
        })
      }
    },
