<script>
  import wepy from '@wepy/core';
  import { orderQRCode, orderWechatPaymentStatus, orderOfflinePay } from './../../request/api.js';
  wepy.page({
    options: {
      addGlobalClass: true
    },
    data: {
      codeData:{
