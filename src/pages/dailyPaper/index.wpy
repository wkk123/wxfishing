
<style lang="stylus">
@import "./../../css/public.styl";
.dailyPaper_box{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  .picker_box{
    width: calc(100% - 20px);
    height: 50px;
    background: #FFFFFF;
    box-shadow: 0px 2px 12px 5px rgba(180, 180, 180, 0.1);
    border-radius: 8px;
    margin-top: 20px;
    padding: 0 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 18px;
    color: #333333; 
    .picker_date{
      width: calc(100% - 36px);
      height: 100%;
      line-height: 50px; 
      .picker{
        width: 100%;
        height: 100%;
      }
    }
    .picker_icon{
      width: 18px;
      height: 18px;
    }
  }
}
</style>
<template>
  <div class="container">
    <div class="dailyPaper_box">
      <div class="picker_box">
        <picker class="picker_date" mode="date" value="{{date}}" bindchange="bindDateChange">
          <view class="picker">{{date}}</view>
        </picker>
        <image class="picker_icon" src="./../../image/calendar.png" mode="widthFix" lazy-load="false" />
      </div>
    </div>
  </div>
</template>

<script>
  import wepy from '@wepy/core';
  wepy.page({
    options: {
      addGlobalClass: true
    },
    data: {
      date: '',
    },
    computed: {

    },
    methods: {
      // 选择日期
      bindDateChange: function(e) {
        this.date = e.$wx.detail.value;
      },
    },
    onLoad(options){
      // console.log('options',options)
    },
    onShow(){
      this.date = new Date().toLocaleDateString().replace(/\//g,'-');
    },
    onReady(){

    },
    onUnload(){

    },
  });
</script>
