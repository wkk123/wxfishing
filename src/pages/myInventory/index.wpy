
<style lang="stylus">
@import "./../../css/public.styl";
.myInventory_box{
  width: 100%;
  height: 100%;
  background: #F6F6F6;
  .myInventory_search{
    width: 100%;
    padding: 10px 10px 15px 0;
    background: #FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center; 
    .search_class{
      width: 68px;
      padding: 0 10px;
