<template>
  <div class="myInventory_box">
    <div class="myInventory_search">
      <div
        class="search_class"
        @click="searchClassBtn()"
      >{{searchClass}}</div>
      <div class="search_box">
        <Search />
      </div>
    </div>
    <ul class="myInventory_sort">
      <li class="sort_item {{true&&'active'}}">
        <image
          class="item_img"
          :src="typeNum===1?image1:image2"
          mode="widthFix"
          lazy-load="false">
        </image>
        <text class="item_text">热度</text>
      </li>
      <li class="sort_item">
        <image
          class="item_img"
          :src="typeNum===2?image1:image2"
          mode="widthFix"
          lazy-load="false">
        </image>
        <text class="item_text">库存量</text>
      </li>
      <li class="sort_item">
        <image
          class="item_img"
          :src="typeNum===3?image1:image2"
          mode="widthFix"
          lazy-load="false">
        </image>
        <text class="item_text">到期时间</text>
      </li>
    </ul>
    <ul class="myInventory_content">
      <li class="content_item" v-for="item in orderList">
        <orderItem :orderData="item"/>
      </li>
    </ul>
    <div class="myInventory_nav">
      <text class="nav_text">库存汇总：<text class="text_num">¥{{109932}}</text></text>
      <button class="nav_btn">库存变动</button>
    </div>
  </div>
</template>

<script>
  import wepy from '@wepy/core';
  import { goodsGoodsList } from './../../request/api.js';
  wepy.page({
    options: {
      addGlobalClass: true
    },
    data: {
      searchClass: '全部',
      typeNum: 1,
      image1: './../../image/sort1.png',
      image2: './../../image/sort2.png',
      orderList:[],
      query:{
        keyword: '',// 搜索关键字
        sortField: '',//排序字段 heat 热度 quantity 库存量 expire_time 到期时间
        order:'',//排序规则 desc 降序 asc 升序
        firstClassId:'',//一级分类id
        secondClassId:'',//二级分类id
      }
    },
    computed: {

    },
    methods: {
      // 跳转分类
      searchClassBtn() {
        wx.navigateTo({
          url: '/pages/myInventory/classify'
        })
      },
      // 库存列表
      getGoodsGoodsList(query){
        goodsGoodsList(query).then(res => {
          const {code, data, message} = res;
          if(res.code===10000){
            console.log('res',res)
            this.orderList = data;
          }
        }).catch(err=> {
          console.log(err)
        })
      },
    },
    onLoad(options){
      // console.log('options',options)
    },
    onShow(){
      this.getGoodsGoodsList(this.query);
    },
    onReady(){

    },
    onUnload(){

    },
  });
</script>
<config>
{
  navigationBarTitleText: '我的库存',
  disableScroll: true,
  usingComponents: {
    "orderItem": './../../components/orderItem',
    "Search": './../../components/searchInput',
  }
}
</config>
