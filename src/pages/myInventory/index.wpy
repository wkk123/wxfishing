      font-size: 16px;
      font-weight: 400;
      color: #000000;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      &:after{
        content: '';
        display: inline-block;
        width: 0;
        height: 0;
        border-left: 4px solid transparent;
        border-right: 4px solid transparent;
        border-top: 6px solid #000000;
      }
    }
    .search_box{
      width: calc(100% - 68px);
      height: 40px;
    }
  }
