
<style lang="stylus" scope>
@import "./../css/public.styl";
.item_box{
  width: 100%;
  height: auto;
  .item_title{
    font-size: 12px;
    color: #666666;
    font-weight: 500;
    padding: 20px 0 0px; 
    display: flex;
    &.active{
      &:after{
        content: '*';
        font-size: 14px;
        color: #F33C2E;
        font-weight: 500;
        padding-left: 5px;
      }   
    }
  }
  .input_box{
    width: 100%;
    height: 40px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    // &:after{
    //   content: '>';
    //   font-size: 18px;
    //   color: #999999;
    // } 
  }
  .item_input{
    width: 100%;
    height: 100%;
    font-size: 18px;
  }
  .input_placeholder{
    width: 100%;
    height: 100%;
    color: #D6D6D6;
    font-size: 18px;
  }
  .radio_group{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 40px;
  }
  .radio_label{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin-right: 20px;
  }
} 
</style>
<template>
  <div class="item_box">
    <text class="item_title {{obj.Sign ?'active':''}}">{{obj.title}}</text>
    <div v-if="obj.mold === 'radio'">
      <radio-group
        class="radio_group"
        bindchange="radioChange"
      >
        <label 
          class="weui-cell weui-check__label radio_label"
          v-for="item in obj.items"
        >
          <view class="weui-cell__hd">
            <radio value="{{item.value}}" checked="{{item.checked}}"/>
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
        </label>
      </radio-group>
    </div>
    <div class="input_box" v-else>
      <input
        class="item_input"
        type="{{obj.type}}"
        v-model="value"
        :placeholder="obj.placeholder" 
        placeholder-class="input_placeholder"
        @input="bindinput()"
        adjustPosition="{{true}}"
        cursorSpacing="{{50}}"
      />
    </div>
  </div>
</template>

<script>
  import wepy from '@wepy/core';
  wepy.component({
    options: {
      addGlobalClass: true
    },
    props: {
      obj: {
        type: Object,
        default: () => {
          return {
            title: {
              type: String,
              default:''
            },
            placeholder: {
              type: String,
              default:'请输入'
            },
            Sign: {
              type: Boolean,
              default: false
            },
            key: {
              type: String,
              default: ''
            },
            type: {
              type: String,
              default: 'number'
            },
            mold: {
              type: String,
              default: 'input'
            },
          }
        }
      },
    },
    data: {
      value:'',
    },
    computed: {

    },
    methods: {
      bindinput(){
        this.$emit('inputBtn', {
          key: this.obj.key,
          value: this.value,
        });
      },
    },
    onShow(){
      
    },
  });
</script>
